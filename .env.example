# =============================================================================
# GDA Project - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# NEVER commit your .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core
# -----------------------------------------------------------------------------
SECRET_KEY='your_django_secret_key_here'  # Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DEBUG='False'                              # "True" for development, "False" for production

# -----------------------------------------------------------------------------
# Database (PostgreSQL for Docker, SQLite for local dev)
# -----------------------------------------------------------------------------
USE_POSTGRES='True'                        # "True" for PostgreSQL (Docker), "False" for SQLite (local)
DB_ENGINE='django.db.backends.postgresql'
DB_NAME='gda_db'                           # Database name
DB_USER='gda_user'                         # Database user
DB_PASSWORD='gda_password'                 # Database password (change in production!)
DB_HOST='db'                               # "db" for Docker, "localhost" for local PostgreSQL
DB_PORT='5432'

# -----------------------------------------------------------------------------
# Static Files (Docker deployment)
# -----------------------------------------------------------------------------
STATIC_ROOT='/app/static'                  # Docker: /app/static, Local: leave commented

# -----------------------------------------------------------------------------
# Email (SMTP)
# -----------------------------------------------------------------------------
EMAIL_BACKEND='django.core.mail.backends.smtp.EmailBackend'
EMAIL_HOST='smtp.gmail.com'
EMAIL_PORT='465'
EMAIL_USE_SSL='True'
EMAIL_HOST_USER='your_email_here@gmail.com'
EMAIL_HOST_PASSWORD='your_email_password_here'  # Use App Passwords for email
DEFAULT_FROM_EMAIL='your_email_here@gmail.com'
EMAIL_SUBJECT_PREFIX='GDA'
EMAIL_TIMEOUT='10'

# -----------------------------------------------------------------------------
# Security (Production - set all to "True" behind nginx with SSL)
# -----------------------------------------------------------------------------
SECURE_SSL_REDIRECT='False'                # Redirect HTTP → HTTPS
SESSION_COOKIE_SECURE='False'              # Send session cookie over HTTPS only
CSRF_COOKIE_SECURE='False'                 # Send CSRF cookie over HTTPS only
SECURE_HSTS_SECONDS='0'                    # HSTS max-age (e.g., 31536000 for 1 year)
SECURE_HSTS_INCLUDE_SUBDOMAINS='False'     # Include subdomains in HSTS
SECURE_HSTS_PRELOAD='False'                # Allow HSTS preload list submission

# -----------------------------------------------------------------------------
# Social Authentication - OAuth Credentials
# -----------------------------------------------------------------------------

# Google OAuth2
# Get credentials: https://console.cloud.google.com/
# 1. Create/select project → Enable Google+ API
# 2. Create OAuth 2.0 credentials (Web application)
# 3. Add redirect URI: https://yourdomain.com/accounts/google/login/callback/
GOOGLE_CLIENT_ID='your_google_client_id_here.apps.googleusercontent.com'
GOOGLE_CLIENT_SECRET='your_google_client_secret_here'

# Facebook OAuth2
# Get credentials: https://developers.facebook.com/
# 1. Create app → Add Facebook Login product
# 2. Add redirect URI: https://yourdomain.com/accounts/facebook/login/callback/
FACEBOOK_CLIENT_ID='your_facebook_client_id_here'
FACEBOOK_CLIENT_SECRET='your_facebook_client_secret_here'

# GitHub OAuth2
# Get credentials: https://github.com/settings/developers
# 1. New OAuth App → Set callback URL: https://yourdomain.com/accounts/github/login/callback/
GITHUB_CLIENT_ID='your_github_client_id_here'
GITHUB_CLIENT_SECRET='your_github_client_secret_here'

# -----------------------------------------------------------------------------
# Docker / Nginx (optional overrides)
# -----------------------------------------------------------------------------
NGINX_HTTP_PORT='80'                       # Host port for HTTP
NGINX_HTTPS_PORT='443'                     # Host port for HTTPS

# =============================================================================
# Docker Compose Quick Start
# =============================================================================
# 1. Copy this file:  cp .env.example .env
# 2. Generate SECRET_KEY and update .env
# 3. Update DB_PASSWORD for production security
# 4. Place SSL certs in nginx/ssl/:
#      - nginx/ssl/fullchain.pem
#      - nginx/ssl/privkey.pem
# 5. Run:  docker compose up --build
#
# Endpoints:
#   https://localhost/          → Django app
#   https://localhost/admin/    → Admin panel
#   https://localhost/health/   → Health check
#   https://localhost/static/   → Static files
#   https://localhost/media/    → Media uploads
# =============================================================================