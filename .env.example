# Example environment variables for GDA project
# Copy this to .env (or set env vars in your deployment) and fill values.

# Django
# Django secret key - used by os.environ.get('SECRET_KEY') in settings.py
# You can generate a new one using `python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'`
SECRET_KEY='your-secret-key-here'

# Debug mode - used by os.environ.get('DEBUG') in settings.py
# Set to 'True' for development, 'False' for production
DEBUG='False'

# Database
USE_POSTGRES='False'  # Set to 'True' to use PostgreSQL, 'False' for SQLite

# Email settings for sending emails
EMAIL_BACKEND = 'django.core.mail.backends.smtp.EmailBackend'
EMAIL_HOST = 'smtp.gmail.com'  # Replace with your SMTP host
EMAIL_PORT = 465  # Replace with your SMTP port (e.g., 587 for TLS, 465 for SSL)
EMAIL_USE_SSL = True  # Use SSL for secure connection
EMAIL_HOST_USER = 'your-email@example.com'  # Replace with your email
EMAIL_HOST_PASSWORD = 'your-email-password'  # Replace with your email password
DEFAULT_FROM_EMAIL = 'your-email@example.com'  # Replace with your default from email
EMAIL_SUBJECT_PREFIX = 'GDA '  # Prefix for email subjects
EMAIL_TIMEOUT = 10

# Deployment security (set True in production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False